EMPEZANDO A HACER EJ 3 CALCULO DE NUMEROS PRIMOS!!

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    class Program
    {
        static void Main(string[] args)
        {
            int numero, i;

            Console.WriteLine("Ingrese el n√∫mero para calcular numeros primos: ");
            int.TryParse(Console.ReadLine(), out numero);
            Console.ReadKey(); // es similar a system pause

            for(i=1; i< numero; i++)
            {   
                if ((i % i == 0) && (i % 1 == 0))
                {
                    Console.WriteLine("LOS NUMEROS PIMOS SON: {0}", i);
                    Console.ReadKey(); // es similar a system pause

                }

            }

        }
    }
}